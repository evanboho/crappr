<h2>users</h2>

 <ul>
<% @users.each do |user| %>
 
    <li>
    <%= link_to user.screen_name, user %><br/>
    <% if current_user.admin? %>
    <%= link_to 'edit', edit_user_path(user) %>
    <%= link_to 'destroy', user, confirm: 'Are you sure?', method: :delete %>
    <% end %>
  </li> <br/>  
<% end %>
</ul>

<br />
